<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CalculationResult">

    <RelativeLayout
        android:id="@+id/calculation_result_section"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/calculate_btn_style">

        <TextView
            android:id="@+id/congo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold|normal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:text="@string/congo"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/calculation_result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold|normal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="Calc"
            android:layout_below="@id/congo_text"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>

    <!-- Button Section -->
    <RelativeLayout
        android:id="@+id/about_dev_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/calculate_btn_style"
            android:drawableLeft="@drawable/friendship_calculation"
            android:onClick="aboutDeveloper"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/calculate_button_text"
            android:textSize="20dp" />

    </RelativeLayout>

</RelativeLayout>